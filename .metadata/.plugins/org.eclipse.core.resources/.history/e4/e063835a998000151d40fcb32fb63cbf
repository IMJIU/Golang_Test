package main

import (
	"fmt"
	"io/ioutil"
	"os"
)
var  count int64 = 0;
//获取指定目录下的所有文件，不进入下一级目录搜索，可以匹配后缀过滤。
func sumFile(dir []os.FileInfo) (err error) {
	if err != nil {
		return err
	}
	for _, fi := range dir {
		fmt.Println(fi.Name(), fi.Size())
		if fi.IsDir() { // 忽略目录
			sumFile(fi)
		} else {
			count+=fi.Size()
			//fmt.Print("size:", fi.Size())
		}
	}
	return nil
}

